<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myToast">
        <item name="colorBackground">#030303</item>
        <item name="textColor">@color/white</item>
        <item name="iconRight">@drawable/ic_success</item>
        <item name="strokeColor">@color/Black</item>
        <item name="strokeWidth">3dp</item>
        <item name="length">LONG</item>
        <item name="fontFamily">@font/amaranth_bold</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="myToast1">
        <item name="colorBackground">#030303</item>
        <item name="textColor">@color/white</item>
        <item name="iconRight">@drawable/ic_cancel</item>
        <item name="length">LONG</item>
        <item name="fontFamily">@font/amaranth_bold</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="deleteallTasksToast">
        <item name="colorBackground">#030303</item>
        <item name="textColor">@color/yellow</item>
        <item name="iconRight">@drawable/ic_delete_black_24dp</item>
        <item name="fontFamily">@font/amaranth_bold</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="myToast2">
        <item name="colorBackground">@color/white</item>
        <item name="textColor">@color/Black</item>
        <item name="fontFamily">@font/amaranth_bold</item>
        <item name="iconRight">@drawable/ic_success</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="ProgressBar"
        parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/green</item>
    </style>

</resources>
