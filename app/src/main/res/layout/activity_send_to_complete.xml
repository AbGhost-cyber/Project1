<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/SendToComplete"
    tools:context=".ui.SendToComplete"
    android:background="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/alarm_task"
                android:orientation="vertical"
                android:paddingTop="22dp"
                android:paddingBottom="22dp">

                <TextView
                    android:id="@+id/setTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Playing Soccer"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/setDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="I want to play soccer today, been a while:)"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/setTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="2:59PM"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/CompleteTask"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle"
                android:text="Complete Task"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="sans-serif-black"
                android:layout_centerInParent="true"
                android:textColor="@color/green"
                android:textStyle="bold" />

        </RelativeLayout>

</LinearLayout>